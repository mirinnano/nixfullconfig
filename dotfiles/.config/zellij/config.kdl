// Zellij configuration for mobile SSH access
//
// Keybindings optimized for mobile terminals:
// - Ctrl+P: Session management
// - Ctrl+T: New tab
// - Ctrl+W: Close tab

ui {
    pane_frames {
        rounded_corners true
    }
}

themes {
    default {
        fg "#c4a7e7"
        bg "#191724"
        red "#eb6f92"
        green "#ebbcba"
        yellow "#f6c177"
        blue "#9ccfd8"
        magenta "#c4a7e7"
        orange "#eb6f92"
        cyan "#9ccfd8"
        white "#e0def4"
        black "#191724"
    }
}

theme "default"

keybinds clear-defaults true {
    normal {
        ctrl+p { SwitchToMode "Session" }
        ctrl+t { NewTab }
        ctrl+w { CloseTab }
        ctrl+tab { GoToPreviousTab }
        ctrl+1 { GoToTab 1 }
        ctrl+2 { GoToTab 2 }
        ctrl+3 { GoToTab 3 }
        ctrl+s { SwitchToMode "Scroll" }
    }

    session {
        ctrl+p { SwitchToMode "Normal" }
        ctrl+d { Detach }
    }

    scroll {
        ctrl+s { SwitchToMode "Normal" }
    }
}

session_serialization {
    serialize_pane_views true
    serialize_tabs true
}
