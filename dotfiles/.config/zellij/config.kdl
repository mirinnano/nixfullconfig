// Zellij configuration for mobile SSH access
// Simplified for compatibility

keybinds clear-defaults=true {
    normal {
        ctrl+p { SwitchToMode "Session"; }
        ctrl+t { NewTab; }
        ctrl+w { CloseTab; }
        ctrl+d { Detach; }
    }
    session {
        ctrl+p { SwitchToMode "Normal"; }
        ctrl+d { Detach; }
    }
}
